<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvColors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="75dp" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:background="@color/color31"
        android:text="@string/select_button"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/rvColors"
        android:layout_marginTop="28dp"
        android:text="@string/how_feeling"
        android:textSize="25sp"/>

    <ImageButton
        android:id="@+id/x_button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignEnd="@+id/rvColors"

        app:srcCompat="@drawable/exit_icon"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignTop="@+id/textView"
        android:gravity="center_vertical"/>

</RelativeLayout>